{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "cache-control": "no-store, no-cache, must-revalidate, max-age=0"
      }
    },
    {
      "src": "/assets/(.*\\.js)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "no-store, no-cache, must-revalidate, max-age=0",
        "Content-Type": "application/javascript"
      }
    }
  ]
}
